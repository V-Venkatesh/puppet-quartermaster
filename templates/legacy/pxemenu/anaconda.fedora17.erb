label <%= @name %>
        menu label (<%= @name %>): ^Manual installation
        kernel ../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %>
        append initrd=../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %><%= @initrd %> inst.repo=<%= @inst_repo %>

label <%= @name %>-<%= @autofile %>
        menu label (<%= @name %>): ^<%= @autofile %> Installation
        kernel ../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %>
	append initrd=../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %><%= @initrd %> inst.ks=http://<%= @ipaddress %>/<%= @distro %>/<%= @autofile %>/<%= @name %>.<%= @autofile %> inst.rep=<%= @inst_repo %>
label <%= @name %>-VM-<%= @autofile %>
        menu label (<%= @name %>): Virtual Machine <%= @autofile %> installation
        kernel ../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %>
	append initrd=../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %><%= @initrd %> inst.ks=http://<%= @ipaddress %>/<%= @distro %>/<%= @autofile %>/<%= @name %>.<%= @autofile %> inst.repo=<%= @inst_repo %>

label <%= @name %>-rescue
        menu label (<%= @name %>): Rescue
        kernel ../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %>
        append initrd=../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %><%= @initrd %> inst.repo=<%= @inst_repo %>

