label <%= @name %>
        menu label <%= @release %> <%= @p_arch %>: ^Manual 
        kernel ../<%= @distro %>/<%= @p_arch %>/<%= @target_kernel %>
        append initrd=../<%= @distro %>/<%= @p_arch %>/<%= @target_initrd %> url=<%= @inst_repo %>

label <%= @name %>-<%= @autofile %>
        menu label <%= @release %> <%= @p_arch %>: ^BareMetal/KVM <%= @autofile %> 
        kernel ../<%= @distro %>/<%= @p_arch %>/<%= @target_kernel %>
	append initrd=../<%= @distro %>/<%= @p_arch %>/<%= @target_initrd %> ks=http://<%= @ipaddress %>/<%= @distro %>/<%= @autofile %>/<%= @name %>.<%= @autofile %> url=<%= @inst_repo %>

label <%= @name %>-VM-<%= @autofile %>
        menu label <%= @release %> <%= @p_arch %>: ^Hyper-V VM (LIS Enabled) <%= @autofile %> 
        kernel ../<%= @distro %>/<%= @p_arch %>/<%= @target_kernel %>
	append initrd=../<%= @distro %>/<%= @p_arch %>/<%= @target_initrd %> ksdevice=eth1 ks=http://<%= @ipaddress %>/<%= @distro %>/<%= @autofile %>/<%= @name %>.<%= @autofile %> url=<%= @inst_repo %>

label <%= @name %>-rescue
        menu label <%= @release %> <%= @p_arch %>: ^Rescue
        kernel ../<%= @distro %>/<%= @p_arch %>/<%= @target_kernel %>
        append initrd=../<%= @distro %>/<%= @p_arch %>/<%= @target_initrd %> url=<%= @inst_repo %>

